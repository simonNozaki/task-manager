<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-4.2.xsd
		http://www.springframework.org/schema/mvc
		http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
		http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/aop/spring-aop-4.2.xsd">

    <context:annotation-config />
    <!-- ベースパッケージの指定 -->
    <context:component-scan base-package="com.tm" />

    <mvc:annotation-driven />

    <!-- インターセプターの指定 -->
	<mvc:interceptors>
	    <mvc:interceptor>
            <mvc:mapping path="/**" />
            <bean class="com.tm.exception.adviser.BeanCommonAspectAdviser" />
        </mvc:interceptor>
	</mvc:interceptors>

	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/" />
		<property name="suffix" value=".jsp" />
	</bean>

    <!-- AspectJを有効化 -->
    <aop:aspectj-autoproxy proxy-target-class="true" />

    <!-- Aspectクラスの定義 -->
    <bean id = "BeanCommonAspectAdviser" class="com.tm.exception.adviser.BeanCommonAspectAdviser" />
        <aop:config proxy-target-class="true">
        <aop:advisor
        	pointcut="execution(* com.tm.service..*Service.*(..))"
        	advice-ref="BeanCommonAspectAdviser"
        	id="BeanCommonAspectAdviser" />
        </aop:config>
</beans>